{
  "name": "meet-clock",
  "version": "1.0",
  "description": "A Chrome extension that displays a clock at the entrance to Google Meet",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "run_at": "document_end",
      "js": ["content_meet.js"]
    }
  ],
  "icons": {
    "16": "meet-clock-icon16.png",
    "32": "meet-clock-icon32.png",
    "48": "meet-clock-icon48.png",
    "128": "meet-clock-icon128.png"
  }
}
